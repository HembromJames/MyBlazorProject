@page "/pc"
<button class="btn btn-primary" type="button" @onclick="IncrementCounter">Counter</button>
<h1 style="@Style ; @BorderStyle">Parent Component- @Counter</h1>
<CascadingValue Value="@Counter" Name="Counter" IsFixed="false">
    <CascadingValue Value="@Style" Name="ColorStyle" IsFixed="true">
    <CascadingValue Value="@BorderStyle" Name="BorderStyle" IsFixed="true">
        <ChildComponent Id="Input Field" required="required" placeholder="Parent Component Placeholder"
                        size="50" maxlength=" 5"></ChildComponent>
    </CascadingValue>
</CascadingValue>
</CascadingValue>

